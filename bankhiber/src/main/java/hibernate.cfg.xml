<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- MySQL database driver class -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>

		<!-- MySQL database connection URL -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bankhiber?serverTimezone=UTC</property>

		<!-- MySQL database username -->
		<property name="hibernate.connection.username">root</property>

		<!-- MySQL database password -->
		<property name="hibernate.connection.password">rohit</property>

		<!-- Dialect for MySQL -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<!-- Update the database schema automatically -->
		<property name="hibernate.hbm2ddl.auto">update</property>

		<!-- Show SQL statements in the console -->
		<property name="hibernate.show_sql">false</property>

		<!-- Mapping configuration for the student class -->
		<mapping class="com.bankhiber.BankUser"></mapping>
		
		
	</session-factory>
</hibernate-configuration>
